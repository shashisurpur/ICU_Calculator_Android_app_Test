<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.slideshow.SlideshowFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:orientation="vertical">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Acute Tubular Necrosis"
                    android:textSize="24sp"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/atn_US"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Urine Sodium"
                    android:textColor="@color/textColor"
                    />
                <EditText
                    android:id="@+id/atn_US_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="TextField"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/atn_US_mg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:text="mg/dl"
                    />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/atn_SC"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:text="Serum Creatinine"
                    />
                <EditText
                    android:id="@+id/atn_SC_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="TextField"
                    android:inputType="number"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:layout_marginLeft="16dp"
                    />
                <TextView
                    android:id="@+id/atn_SC_mg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:text="mg/dl"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp">
                <TextView
                    android:id="@+id/atn_UC"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Urine Creatinine"
                    android:textColor="@color/textColor"
                    />
                <EditText
                    android:id="@+id/atn_UC_value"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:hint="TextField"
                    android:inputType="number"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:imeOptions="flagNavigateNext"
                    />
                <TextView
                    android:id="@+id/atn_UC_mg"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:text="mg/dl"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
               android:layout_margin="30dp">
                <Button
                    android:id="@+id/atn_calculate"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/tabTextColor"
                    android:text="@string/calculation_button"
                    android:layout_gravity="center"
                    android:gravity="center"
                    />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp">
                <TextView
                    android:id="@+id/atn_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Acute Tubular NeCrosis ="
                    android:textColor="@color/textColor"
                    />
                <EditText
                    android:id="@+id/atn_result"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_marginLeft="16dp"/>

            </TableRow>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>